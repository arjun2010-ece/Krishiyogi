 const handleDatesChanged = ({ startDate, endDate }) => {
    if (JSON.stringify(startDate) !== JSON.stringify(startDated)) {
      setStartFlag(true);
      setStartDated(startDate);
    }
    if (JSON.stringify(endDate) !== JSON.stringify(endDated)) {
      setEndFlag(true);
      setEndDated(endDate);
    }
  };


